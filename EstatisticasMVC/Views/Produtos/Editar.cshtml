@using EstatisticasMVC.Entitys;
@{
    Produto produto = ViewBag.produto;
    ViewData["Title"] = "Editar Produto - produto.Nome";
}

<div class="text-center">
    <h1 class="display-4">Editar Produto - @produto.Nome</h1>
</div>

<hr>

<form action="/produtos/@produto.Id/atualizar" method="post">
    <div class="form-group">
        <label for="nome">Nome</label>
        <input type="nome" class="form-control" id="nome" value="@produto.Nome" name="nome" placeholder="Digite o nome">
    </div>
    <br>
    <div class="form-group">
        <label for="descricao">Descricao</label>
        <input type="descricao" class="form-control" id="descricao" value="@produto.Descricao" name="descricao" placeholder="Digite a descrição">
    </div>
    <br>
    <div class="form-group">
        <label for="dataCriacao">Data de Criação</label>
        <input type="dataCriacao" class="form-control" id="dataCriacao" value="@produto.DataCriacao" name="data_criacao" placeholder="Digite a data (yyyy/MM/dd)">
    </div>
    <br>
        <div class="form-group">
        <label for="dataValidade">Data de Validade</label>
        <input type="dataValidade" class="form-control" id="dataValidade" value="@produto.DataValidade" name="data_validade" placeholder="Digite a data (yyyy/MM/dd)">
    </div>
    <br>
    <div class="form-group">
        <label for="quantidade">Quantidade</label>
        <input type="quantidade" class="form-control" id="quantidade" value="@produto.Quantidade" name="quantidade" placeholder="Digite a quantidade">
    </div>
    <br>

    <button type="submit" class="btn btn-primary">Enviar</button>
    <a href="/produtos" class="btn btn-default">Voltar</a>
</form>